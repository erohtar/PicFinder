<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/dark_card"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Image Thumbnail -->
        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@color/dark_surface"
            tools:src="@drawable/ic_folder" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- File Name -->
            <TextView
                android:id="@+id/file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="10_10_2017 6_53 pm Office..." />

            <!-- Extracted Text Preview -->
            <TextView
                android:id="@+id/extracted_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary_dark"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                tools:text="Patient Name\nAge/Gender\nDoctor\nDepartment..." />

            <!-- File Path -->
            <TextView
                android:id="@+id/file_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary_dark"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="start"
                tools:text="/storage/emulated/0/Pictures/Documents/" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>